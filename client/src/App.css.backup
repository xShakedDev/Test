/* Reset and base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
  direction: rtl;
  text-align: right;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

.App {
  min-height: 100vh;
}

/* App Header */
.app-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  backdrop-filter: none;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  padding: 1rem 0;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.header-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-left .app-title {
  color: white;
  font-size: 1.8rem;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin: 0;
}

.header-icon {
  width: 2rem;
  height: 2rem;
  color: #667eea;
}

/* Header Navigation */
.header-navigation {
  display: flex;
  gap: 2rem;
  align-items: center;
}

.desktop-navigation {
  display: flex;
}

.nav-button {
  background: none;
  border: none;
  color: rgba(255, 255, 255, 0.8);
  font-size: 1rem;
  font-weight: 600;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 2px solid transparent;
}

.nav-button:hover {
  color: white;
  background: rgba(255, 255, 255, 0.1);
}

.nav-button-active {
  color: white;
  border-bottom-color: #667eea;
  background: rgba(255, 255, 255, 0.1);
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin: 1rem;
}

.admin-status {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* User Info */
.user-info {
  text-align: right;
  color: white;
}

.user-name {
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.user-role {
  font-size: 0.85rem;
  opacity: 0.8;
}

.admin-badge {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  padding: 0.5rem 1rem;
  border-radius: 12px;
  font-size: 0.9rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.admin-badge-admin {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  border-color: rgba(34, 197, 94, 0.3);
}

.admin-badge-user {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border-color: rgba(59, 130, 246, 0.3);
}

/* Mobile Navigation */
.mobile-navigation {
  display: none;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  margin-top: 1rem;
  padding-top: 1rem;
}

.mobile-menu-toggle {
  background: none;
  border: none;
  color: rgba(255, 255, 255, 0.8);
  font-size: 1rem;
  font-weight: 600;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  background: rgba(255, 255, 255, 0.1);
}

.mobile-menu-toggle:hover {
  color: white;
  background: rgba(255, 255, 255, 0.2);
}

.hamburger-icon {
  width: 1.5rem;
  height: 1.5rem;
  transition: transform 0.3s ease;
}

.hamburger-icon.open {
  transform: rotate(180deg);
}

.mobile-nav-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  margin-top: 0.5rem;
}

.mobile-nav-content.open {
  max-height: 600px;
}

/* Mobile User Info Section */
.mobile-user-info {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 1rem 2rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 1rem;
}

.mobile-admin-badge {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  padding: 0.75rem 1rem;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  border: 1px solid rgba(34, 197, 94, 0.3);
  width: 100%;
}

.mobile-admin-badge.admin-badge-admin {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  border-color: rgba(34, 197, 94, 0.3);
}

.mobile-admin-badge.admin-badge-user {
  background: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border-color: rgba(59, 130, 246, 0.3);
}

/* Mobile Twilio Balance */
.mobile-twilio-balance {
  width: 100%;
}

.mobile-balance-card {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  backdrop-filter: blur(10px);
}

.mobile-balance-icon {
  width: 2rem;
  height: 2rem;
  color: #667eea;
  flex-shrink: 0;
}

.mobile-balance-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  flex: 1;
}

.mobile-balance-label {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.mobile-balance-amount {
  font-size: 1.1rem;
  font-weight: 700;
  color: white;
}

.mobile-refresh-btn {
  padding: 0.5rem;
  font-size: 0.8rem;
  min-width: auto;
  flex-shrink: 0;
}

/* Mobile Logout Button */
.mobile-logout-btn {
  width: 100%;
  justify-content: center;
  padding: 0.75rem 1rem;
  font-size: 1rem;
}

.mobile-nav-buttons {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 0 2rem;
}

.mobile-nav-button {
  background: none;
  border: none;
  color: rgba(255, 255, 255, 0.8);
  font-size: 1rem;
  font-weight: 600;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: right;
  width: 100%;
  border-right: 4px solid transparent;
}

.mobile-nav-button:hover {
  color: white;
  background: rgba(255, 255, 255, 0.1);
}

.mobile-nav-button-active {
  color: white;
  border-right-color: #667eea;
  background: rgba(255, 255, 255, 0.1);
}



/* Login Page */
.login-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  direction: rtl;
}

.login-header {
  text-align: center;
  margin-bottom: 2rem;
}

.login-logo {
  display: flex;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.logo-icon {
  width: 4rem;
  height: 4rem;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.logo-svg {
  width: 2rem;
  height: 2rem;
  color: white;
}

.login-title {
  color: white;
  font-size: 2.5rem;
  font-weight: 900;
  margin-bottom: 0.5rem;
  text-shadow: 0 4px 12px rgba(0, 0, 0, 0.5);
}

.login-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 1.1rem;
  font-weight: 500;
}

.login-form-container {
  width: 100%;
  max-width: 450px;
}

.login-form-inner {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.login-submit-btn {
  width: 100%;
  justify-content: center;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.loading-spinner-small {
  width: 1.25rem;
  height: 1.25rem;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* Input Container */
.input-container {
  position: relative;
}

.input-icon {
  position: absolute;
  top: 50%;
  left: 0.75rem;
  transform: translateY(-50%);
  pointer-events: none;
  color: #6b7280;
}

.form-input {
  width: 100%;
  padding: 0.875rem 1rem 0.875rem 2.5rem;
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: white;
  color: #2d3748;
  font-family: inherit;
  text-align: right;
  direction: rtl;
}

.form-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  transform: translateY(-1px);
}

.form-input:disabled {
  background-color: #f7fafc;
  color: #a0aec0;
  cursor: not-allowed;
  opacity: 0.7;
  border-color: #e2e8f0;
}

.form-input::placeholder {
  color: #999;
  font-family: inherit;
}

/* Demo Credentials */
.demo-credentials {
  margin-top: 1.5rem;
  padding: 1rem;
  background: rgba(249, 250, 251, 0.8);
  border-radius: 12px;
  border: 1px solid rgba(229, 231, 235, 0.8);
}

.demo-content {
  text-align: center;
}

.demo-title {
  font-size: 0.75rem;
  color: #6b7280;
  margin-bottom: 0.75rem;
}

.demo-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.75rem;
}

.demo-item {
  background: white;
  padding: 0.5rem 0.75rem;
  border-radius: 8px;
  border: 1px solid rgba(229, 231, 235, 0.8);
}

.demo-label {
  font-size: 0.75rem;
  color: #6b7280;
  display: block;
  margin-bottom: 0.25rem;
}

.demo-value {
  font-family: 'Courier New', monospace;
  color: #111827;
  font-weight: 600;
  font-size: 0.875rem;
}

/* Login Footer */
.login-footer {
  margin-top: 1.5rem;
  text-align: center;
}

.footer-text {
  font-size: 0.75rem;
  color: rgba(255, 255, 255, 0.7);
}

/* Error Message Enhancements */
.error-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 0.5rem;
}

.error-text {
  font-size: 0.875rem;
  color: #dc2626;
}

.error-icon {
  width: 1.25rem;
  height: 1.25rem;
  color: #dc2626;
  flex-shrink: 0;
}

.login-section {
  display: flex;
  align-items: center;
}

.login-form {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  background: rgba(255, 255, 255, 0.1);
  padding: 0.5rem;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.login-input {
  background: rgba(255, 255, 255, 0.9);
  border: none;
  padding: 0.5rem 0.75rem;
  border-radius: 8px;
  font-size: 0.9rem;
  min-width: 150px;
  color: #333;
}

.login-input:focus {
  outline: none;
  box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.5);
}

.login-actions {
  display: flex;
  gap: 0.5rem;
}

.login-error {
  color: #ef4444;
  font-size: 0.8rem;
  margin-top: 0.25rem;
  text-align: center;
}

/* Admin Actions */
.admin-actions {
  display: flex;
  gap: 1rem;
  align-items: center;
}

/* Validation Result Display */
.validation-result {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20px);
  border-radius: 24px;
  padding: 2rem;
  margin: 2rem 0;
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
}

.validation-result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.validation-result-header h3 {
  color: #000000;
  margin: 0;
  font-size: 1.5rem;
  text-align: center;
  flex: 1;
}

.close-btn {
  background: none;
  border: none;
  color: #6c757d;
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.close-btn:hover {
  background: rgba(108, 117, 125, 0.1);
  color: #495057;
}

.validation-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.validation-info p {
  margin-bottom: 0.75rem;
  color: #666;
}

.validation-info strong {
  color: #333;
}

.verification-code-section h4 {
  color: #333;
  margin-bottom: 1rem;
  font-size: 1.2rem;
}

.verification-code {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.code-display {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  font-family: 'Courier New', monospace;
  font-size: 1.5rem;
  font-weight: 700;
  padding: 1rem 1.5rem;
  border-radius: 12px;
  border: 2px solid rgba(40, 167, 69, 0.3);
  letter-spacing: 2px;
}



.verification-instructions {
  color: #666;
  font-size: 0.9rem;
  line-height: 1.5;
  background: rgba(255, 255, 255, 0.1);
  padding: 1rem;
  border-radius: 8px;
  border-left: 4px solid #667eea;
  grid-column: 1 / -1;
  margin-top: 1rem;
}

/* Validation result actions */
.validation-result .validation-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-start;
  align-items: center;
  margin-top: 1.5rem;
  padding: 0;
  background: none;
  border: none;
}

.validation-result .validation-actions .btn {
  padding: 0.75rem 1.5rem;
  font-size: 0.9rem;
  min-width: 120px;
}

.validation-result .validation-actions .btn:first-child {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
}

.validation-result .validation-actions .btn:first-child:hover {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4b93 100%);
}

.auto-check-info {
  margin-top: 0.5rem;
  padding: 0.5rem;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8px;
  border-left: 3px solid #667eea;
}

.auto-check-info small {
  color: #667eea;
  font-weight: 500;
}

/* Status Badges */
.status-badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
  margin-right: 0.5rem;
}

.status-pending {
  background: rgba(255, 193, 7, 0.15);
  color: #ffc107;
  border: 1px solid rgba(255, 193, 7, 0.25);
}

.status-completed,
.status-verified {
  background: rgba(40, 167, 69, 0.15);
  color: #22c55e;
  border: 1px solid rgba(40, 167, 69, 0.25);
}

.status-failed {
  background: rgba(239, 68, 68, 0.15);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.25);
}

.status-cancelled {
  background: rgba(107, 114, 128, 0.15);
  color: #6b7280;
  border: 1px solid rgba(107, 114, 128, 0.25);
}

.status-in-progress {
  background: rgba(102, 126, 234, 0.15);
  color: #667eea;
  border: 1px solid rgba(102, 126, 234, 0.25);
}

/* Cooldown Indicator */
.cooldown-indicator {
  background: rgba(245, 158, 11, 0.2);
  color: #000000;
  padding: 0.75rem 1rem;
  border-radius: 12px;
  font-size: 0.9rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  border: 1px solid rgba(245, 158, 11, 0.3);
  margin-top: 1rem;
  animation: pulse 2s ease-in-out infinite;
}

.cooldown-text {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

/* Dashboard Container */
.dashboard-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* Dashboard Header */
.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 3rem;
  gap: 2rem;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20px);
  border-radius: 24px;
  padding: 2.5rem;
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.dashboard-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
  background-size: 200% 100%;
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}

.dashboard-header>div:first-child {
  flex: 1;
}

.dashboard-header>button {
  flex-shrink: 0;
  align-self: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 1rem 2rem;
  border-radius: 16px;
  font-size: 1.1rem;
  font-weight: 700;
  border: none;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.dashboard-header>button::before {
  content: '';
  position: absolute;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: right 0.6s;
}

.dashboard-header>button:hover::before {
  right: 100%;
}

.dashboard-header>button:hover {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4b93 100%);
  transform: translateY(-4px);
  box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
  border-color: rgba(255, 255, 255, 0.3);
}

.dashboard-header>button:active {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.dashboard-header h1 {
  color: #ffffff;
  font-size: 3rem;
  margin-bottom: 3rem;
  text-shadow: 0 6px 20px rgba(0, 0, 0, 0.8), 0 3px 10px rgba(0, 0, 0, 0.6);
  font-weight: 900;
  line-height: 1.1;
  letter-spacing: -1px;
  filter: drop-shadow(0 3px 10px rgba(0, 0, 0, 0.5));
  text-align: center;
  position: relative;
  z-index: 2;
}

.dashboard-header h1::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  z-index: -1;
  animation: glow 3s ease-in-out infinite alternate;
}

@keyframes glow {
  0% {
    opacity: 0.3;
    transform: translate(-50%, -50%) scale(1);
  }

  100% {
    opacity: 0.7;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.dashboard-header p {
  color: #ffffff;
  font-size: 1.5rem;
  margin-bottom: 1rem;
  line-height: 1.6;
  font-weight: 500;
  text-shadow: 0 3px 12px rgba(0, 0, 0, 0.8), 0 2px 6px rgba(0, 0, 0, 0.6);
  filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.5));
  text-align: center;
}

.admin-notice {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2), 0 1px 2px rgba(0, 0, 0, 0.1);
