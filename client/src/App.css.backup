/* Caller ID Validation Modal Styles */
.caller-id-validation-modal {
  max-width: 900px;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  position: relative;
  margin: 2rem auto;
  animation: slideIn 0.5s ease-out;
  order: -1;
  align-self: center;
  padding: 3rem;
  transition: all 0.3s ease;
  overflow: hidden;
}

.caller-id-validation-modal:hover {
  transform: translateY(-5px);
  box-shadow: 0 25px 70px rgba(0, 0, 0, 0.15);
  border-color: rgba(102, 126, 234, 0.5);
}

/* Enhanced modal header to look like gate header */
.caller-id-validation-modal .modal-header {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16px 16px 0 0;
  padding: 2rem 3rem;
  border-bottom: 2px solid rgba(102, 126, 234, 0.1);
  margin: -3rem -3rem 2rem -3rem;
  position: relative;
  overflow: hidden;
}

.caller-id-validation-modal .modal-header::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 16px 16px 0 0;
  transform: scaleX(0);
  transition: transform 0.3s ease;
  transform-origin: right;
  z-index: 1;
}

.caller-id-validation-modal .modal-header:hover::before {
  transform: scaleX(1);
}

.caller-id-validation-modal .modal-header h2 {
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  font-size: 1.8rem;
  position: relative;
  margin: 0;
  text-align: center;
}

.caller-id-validation-modal .modal-header h2::before {
  content: '🔐';
  position: absolute;
  top: -0.5rem;
  right: -2rem;
  font-size: 1.5rem;
  opacity: 0.7;
}

/* Enhanced close button to look like part of the card */
.caller-id-validation-modal .modal-close-btn {
  display: none;
}

/* Enhanced modal footer to look like gate footer */
.caller-id-validation-modal .modal-footer {
  background: rgba(102, 126, 234, 0.05);
  border-top: 2px solid rgba(102, 126, 234, 0.1);
  padding: 2rem 3rem;
  border-radius: 0 0 20px 20px;
  margin: 2rem -3rem -3rem -3rem;
  text-align: center;
}

/* Make the modal body look like gate content */
.caller-id-validation-modal .modal-body {
  padding: 0 1rem;
}

/* Modal description styling */
.modal-description {
  color: #64748b;
  margin-bottom: 2rem;
  line-height: 1.7;
  font-size: 1.05rem;
  padding: 1.5rem 1.5rem 1.5rem 5rem;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12px;
  border-right: 4px solid #667eea;
  position: relative;
}

.modal-description::before {
  content: '';
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 1.5rem;
  z-index: 1;
}

.modal-description::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(180deg, #667eea, #764ba2);
  border-radius: 0 4px 4px 0;
  transform: scaleY(0);
  transition: transform 0.3s ease;
  transform-origin: top;
}

.modal-description:hover::after {
  transform: scaleY(1);
}

/* Validation actions section */
.validation-actions {
  margin-bottom: 2.5rem;
  padding: 2rem;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16px;
  border: 2px solid rgba(102, 126, 234, 0.1);
  position: relative;
  overflow: hidden;
}

.validation-actions::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
  transform-origin: right;
}

.validation-actions:hover::before {
  transform: scaleX(1);
}

.validation-actions .btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  font-weight: 600;
  padding: 1rem 2rem;
  border-radius: 16px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.validation-actions .btn:hover {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4b93 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

/* Validation form styling */
.validation-form {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 16px;
  padding: 2rem;
  margin-bottom: 2rem;
  border: 2px solid rgba(102, 126, 234, 0.1);
  position: relative;
  overflow: hidden;
}

.validation-form::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
  transform-origin: right;
}

.validation-form:hover::before {
  transform: scaleX(1);
}

.validation-form h3 {
  margin-bottom: 1.5rem;
  color: #1e293b;
  font-size: 1.4rem;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.validation-form h3::before {
  content: '✏️';
  font-size: 1.2rem;
}

.validation-form .form-group {
  margin-bottom: 2rem;
}

.validation-form .form-group label {
  color: #374151;
  font-weight: 600;
  font-size: 1rem;
  margin-bottom: 0.75rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.validation-form .form-group label[for="phoneNumber"]::before {
  content: '📞';
  font-size: 1.1rem;
}

.validation-form .form-group label[for="friendlyName"]::before {
  content: '🏷️';
  font-size: 1.1rem;
}

.validation-form .form-group input {
  border: 2px solid #d1d5db;
  border-radius: 16px;
  padding: 1rem 1.25rem;
  font-size: 1.05rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: 100%;
}

.validation-form .form-group input:focus {
