.gate-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
}

.gate-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  direction: rtl;
}

.gate-header h3 {
  color: #333;
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.gate-actions-header {
  display: flex;
  gap: 0.75rem;
  direction: rtl;
}

.gate-info {
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12px;
  border-right: 4px solid #667eea;
  direction: rtl;
}

.gate-info p {
  color: #666;
  margin-bottom: 0.75rem;
  font-size: 0.95rem;
  line-height: 1.5;
}

.gate-info strong {
  color: #333;
  font-weight: 600;
}

.gate-authorized {
  margin-bottom: 2rem;
  padding: 1rem;
  background: rgba(40, 167, 69, 0.05);
  border-radius: 12px;
  border-right: 4px solid #28a745;
  direction: rtl;
}

.gate-authorized h4 {
  color: #333;
  font-size: 1.1rem;
  margin-bottom: 0.75rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-weight: 600;
}

.icon-small {
  width: 18px;
  height: 18px;
  color: #28a745;
  display: inline-block;
  vertical-align: middle;
  margin-left: 0.5rem;
  flex-shrink: 0;
}

.icon-big {
  width: 64px;
  height: 64px;
  color: #28a745;
  display: inline-block;
  vertical-align: middle;
  margin-left: 0.5rem;
}

.authorized-number {
  color: #28a745;
  font-weight: 700;
  font-size: 1rem;
  font-family: 'Courier New', monospace;
  background: rgba(40, 167, 69, 0.1);
  padding: 0.5rem 1rem;
  border-radius: 8px;
  border: 1px solid rgba(40, 167, 69, 0.3);
  display: inline-block;
}

.authorized-number.hidden {
  color: #6c757d;
  font-family: monospace;
  letter-spacing: 3px;
  user-select: none;
  background: rgba(108, 117, 125, 0.1);
  border: 1px solid rgba(108, 117, 125, 0.3);
}

.authorized-numbers {
  margin-bottom: 1rem;
}

.password-notice {
  color: #6c757d;
  font-style: italic;
  font-size: 0.85rem;
  text-align: center;
  margin-top: 1rem;
  padding: 0.5rem;
  background: rgba(108, 117, 125, 0.1);
  border-radius: 8px;
  border: 1px solid rgba(108, 117, 125, 0.2);
}

.gate-actions {
  display: flex;
  gap: 1rem;
}

/* Gate Open Section with Password */
.gate-open-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 100%;
}

.password-input-section {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.gate-password-input {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid rgba(102, 126, 234, 0.3);
  border-radius: 8px;
  font-size: 1rem;
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  transition: all 0.3s ease;
  direction: ltr;
  text-align: center;
}

.gate-password-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  background: white;
}

.gate-password-input:disabled {
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
  cursor: not-allowed;
}

.gate-password-input::placeholder {
  color: #999;
  font-family: inherit;
}

/* Security Status Indicators */
.security-status {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.security-status.protected {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
  border: 1px solid rgba(220, 53, 69, 0.3);
}

.security-status.unprotected {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  border: 1px solid rgba(40, 167, 69, 0.3);
}

/* Gate Open Button Special Styling */
.gate-open-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
}

.gate-open-btn::before {
  content: '';
  position: absolute;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: right 0.6s;
}

.gate-open-btn:hover::before {
  right: 100%;
}

.gate-open-btn:hover {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4b93 100%);
  transform: translateY(-4px);
  box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
  border-color: rgba(255, 255, 255, 0.3);
}

.gate-open-btn:active {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

/* Success Message */
.success-message {
  background: linear-gradient(135deg, #d4edda, #c3e6cb);
  color: #155724;
  padding: 1.5rem;
  border-radius: 12px;
  margin-bottom: 1.5rem;
  border: 2px solid #28a745;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
  animation: slideIn 0.5s ease-out;
  direction: rtl;
  text-align: right;
  font-weight: 600;
  font-size: 1.1rem;
}

.success-message button {
  background: none;
  border: none;
  color: #155724;
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  margin-right: auto;
  margin-left: 0;
}

.success-message button:hover {
  background: rgba(40, 167, 69, 0.2);
  transform: scale(1.1);
}

/* Error Message */
.error-message {
  background: linear-gradient(135deg, #f8d7da, #f5c6cb);
  color: #721c24;
  padding: 1.5rem;
  border-radius: 12px;
  margin-bottom: 1.5rem;
  border: 2px solid #dc3545;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
  animation: shake 0.5s ease-in-out;
  direction: rtl;
  text-align: right;
  font-weight: 600;
  font-size: 1.1rem;
}

@keyframes shake {

  0%,
  100% {
    transform: translateX(0);
  }

  25% {
    transform: translateX(5px);
  }

  75% {
    transform: translateX(-5px);
  }
}

.error-message button {
  background: linear-gradient(135deg, #dc3545, #c82333);
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.3s ease;
  margin-right: auto;
  margin-left: 0;
}

.error-message button:hover {
  background: linear-gradient(135deg, #c82333, #a71e2a);
  transform: translateY(-2px);
}

/* Enhanced Loading */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  color: white;
  font-size: 1.4rem;
  font-weight: 600;
  direction: rtl;
  text-align: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
}

.loading-spinner {
  width: 60px;
  height: 60px;
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-top: 4px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading p {
  margin: 0;
  font-size: 1.2rem;
  opacity: 0.9;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* Enhanced No Gates State */
.no-gates {
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
  padding: 4rem 2rem;
  font-size: 1.3rem;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin-top: 2rem;
  direction: rtl;
}

.no-gates-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
}

.no-gates h3 {
  color: white;
  font-size: 1.8rem;
  margin-bottom: 1rem;
  font-weight: 600;
}

.no-gates p {
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 2rem;
  font-size: 1.1rem;
  line-height: 1.6;
}

/* Form Enhancements */
.form-group input:disabled+small {
  opacity: 0.7;
}

/* Enhanced Card Hover Effects */
.gate-card:hover .gate-header h3 {
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* RTL Text Selection */
::selection {
  background: rgba(102, 126, 234, 0.3);
  color: #333;
}

::-moz-selection {
  background: rgba(102, 126, 234, 0.3);
  color: #333;
}

/* RTL Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: rgba(102, 126, 234, 0.5);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(102, 126, 234, 0.7);
}

/* Responsive Design */
@media (max-width: 768px) {
  .app-header {
    padding: 0.5rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    backdrop-filter: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header-content {
    padding: 0 1rem;
