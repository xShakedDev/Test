# Twilio Configuration
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Admin Password
# This is the password required to perform admin actions (add/edit/delete gates)
ADMIN_PASSWORD=your_admin_password_here

# JWT Configuration
# Secret key for JWT token signing (change this in production!)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Database Configuration
# MongoDB Configuration (REQUIRED - no more file-based storage)
USE_MONGODB=true
MONGODB_URI=mongodb+srv://xshakeddev:<db_password>@gates.ihlm3m5.mongodb.net/?retryWrites=true&w=majority&appName=gates

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gates?retryWrites=true&w=majority

# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/gates

# Environment
# Set to 'production' for production deployment
NODE_ENV=development

# Admin Settings
# Gate cooldown time in seconds (minimum 10, maximum 300)
GATE_COOLDOWN_SECONDS=30

# Maximum number of retries for gate opening (minimum 1, maximum 10)
MAX_RETRIES=3

# Enable system notifications (true/false)
ENABLE_NOTIFICATIONS=true

# Auto-refresh interval in minutes (minimum 1, maximum 60)
AUTO_REFRESH_INTERVAL=5
